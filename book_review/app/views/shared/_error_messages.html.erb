<% if target.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= t "shared.contains" %><%= pluralize target.errors.count,
        t("shared.error") %>.
    </div>
    <ul>
      <% target.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
