<%= form_for [:admin, @book], html: {multipart: true} do |f| %>
  <%= render "shared/error_messages", target: @book %>
  <%= f.label :category %>
  <%= f.select :category_id, options_for_select(@categories), 
    {prompt: t(".category")},
    {class: "form form-group form-control"} %>
  
  <%= f.label :image %>
  <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
    class: "upload-image" %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :author %>
  <%= f.text_field :author, class: "form-control" %>

  <%= f.label :number_page %>
  <%= f.number_field :number_page, class: "form-control" %>
  
  <%= f.label :publish_date %>
  <%= f.date_field :publish_date, class: "form-control" %>
  
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control "%>
  
  <%= f.submit t(".save"), class: "btn btn-primary" %>
<% end %>
