<% provide :title, t("all_category") %>
<% provide :button_text, t(".new") %>

<h1><%= t "all_category" %></h1>
<div class=" col-md-6 col-md-offset-3">
  <%= form_for [:admin, @category] do |f| %>
    <%= render "shared/error_messages", target: @category %>
    <span class="col-md-6"><%= f.text_field :name, class: "form-control" %></span>
    <span class="col-md-3"><%= f.submit yield(:button_text), class: "btn btn-primary" %></span>
  <% end %>
</div>  
<div class="row">
  <div class="col-md-8 col-md-offset-3">
    <table class="table table-bordered table_request">
      <thead>
        <tr class="info">
          <th class="center col-md-5"><%= t ".name" %></th>
          <th class="center col-md-1"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</div>
