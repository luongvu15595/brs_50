<% provide :title, t("layout.category") %>
<h1><%= t "layout.category" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category, url: admin_categories_path do |f| %>
      <%= render "shared/error_messages", target: @category %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("layout.categories.new"), 
        class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
