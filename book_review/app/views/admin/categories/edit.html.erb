<% provide :title, t("layout.categories.edit") %>
<h1><%= t "layout.categories.h1" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @category, url: admin_category_path do |f| %>
      <%= render "shared/error_messages", target: @category %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.submit t("layout.categories.save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
